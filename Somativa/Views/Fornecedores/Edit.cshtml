@model Somativa.Models.Fornecedor

@{
    ViewData["Title"] = "Edit";
}

<h4 class="text-center">Editar </h4>
<hr />
<div class="row justify-content-center align-content-center text-center">
    <div class="col-md-4 text-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FornecedorId" />
            <div class="form-floating mb-3">
                <input asp-for="Nome" type="text" class="form-control" id="inNome" placeholder="name">
                <label asp-for="Nome" for="inNome">Nome</label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Cnpj" type="text" class="form-control" id="inNome" placeholder="name">
                <label asp-for="Cnpj" for="inNome">Cnpj</label>
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aplicar Alterações" class="btn btn-primary" />
                <a asp-action="Index"><svg bootstrap-icon="ArrowLeft" width="24" height="24" aria-label="Alarms"></svg></a>
            </div>
        </form>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
