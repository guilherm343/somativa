@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><svg bootstrap-icon="PersonCheckFill" width="18" height="18" aria-label="Login"></svg><span class="d-block d-md-none d-lg-block">Olá, @User.Identity?.Name!</span></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white"><svg bootstrap-icon="BoxArrowRight" width="18" height="18" aria-label="Login"></svg><span class="d-block d-md-none d-lg-block">Sair</span></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white fs-5" asp-area="Identity" asp-page="/Account/Register"><svg bootstrap-icon="PersonPlusFill" width="18" height="18" aria-label="Registrar"></svg>Registrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white fs-5" asp-area="Identity" asp-page="/Account/Login"><svg bootstrap-icon="PersonFill" width="18" height="18" aria-label="Login"></svg>Entrar</a>
        </li>
    }
</ul>