@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Edit";
}

<h4 class="text-center">Editar </h4>
<hr />
<div class="row justify-content-center align-content-center text-center">
    <div class="col-md-4 text-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaItemId" />      
            <div class="form-floating mb-3">
                <select asp-for="VendaId" id="inNota" class="form-control" asp-items="ViewBag.VendaId"></select>
                <label asp-for="VendaId" class="control-label" for="inNota"></label>
                <span asp-validation-for="VendaId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="ProdutoId" id="inNota" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                <label asp-for="ProdutoId" class="control-label" for="inNota"></label>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Quantidade" class="form-control" id="inNota" placeholder="name" />
                <label asp-for="Quantidade" class="control-label" for="inNota"></label>
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Unitario" class="form-control" id="inNota" placeholder="name" />
                <label asp-for="Unitario" class="control-label" for="inNota"></label>
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aplicar Alterações" class="btn btn-primary" />
                <a asp-controller="VendaItems" asp-action="Index" asp-route-id=@Model.VendaId><svg bootstrap-icon="ArrowLeft" width="24" height="24" aria-label="Alarms"></svg></a>
            </div>
        </form>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
